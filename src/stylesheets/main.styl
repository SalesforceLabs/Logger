.toggle {
  display inline-block
  float right
  position: relative;
  width: 75px;
  height: 28px;
  background-color: #c2c2c2;
  border: 1px solid #777c80;
  border-radius: 20px;
  box-shadow: inset 0 2px 3px rgba(0, 0, 0, .25);
}

/* Text indicating "on" or "off". Default is "off" */
.toggle:before {
  position: absolute;
  right: 13px;
  font-weight: bold;
  line-height: 28px;
  color: #fff;
  text-shadow: 0 -1px 2px rgba(0, 0, 0, 0.35);
  text-transform: uppercase;
  content: "Off";
  font-size: 16px;
}

/* Sliding handle */
.toggle-handle {
  position: absolute;
  top: -1px;
  left: -1px;
  z-index: 2;
  width: 28px;
  height: 28px;
  background-image: -webkit-linear-gradient(top, #d0d0d0 0, #fcfcfc 100%);
  background-image: linear-gradient(to bottom, #d0d0d0 0, #fcfcfc 100%);
  -webkit-box-shadow 2px 0px 2px rgba(0,0,0,.2), rgba(255,255,255,.75) 0px 0px 4px inset
  border: 1px solid #636363;
  border-radius: 100px;
  -webkit-transition: -webkit-transform 0.1s ease-in-out, border 0.1s ease-in-out;
                  transition: transform 0.1s ease-in-out, border 0.1s ease-in-out;
}

/* Active state for toggle */
.toggle.active {
  background-color: #19a8e4;
  background-image: -webkit-linear-gradient(top, #60aad5 0, #5394b9 100%);
  background-image: linear-gradient(to bottom, #60aad5 0, #5394b9 100%);
  border: 1px solid #2e5c76;
  box-shadow: inset 0 2px 3px rgba(0, 0, 0, .25);
}

/* Active state for toggle handle */
.toggle.active .toggle-handle {
  border: 1px solid #2d5165;
  background-image: -webkit-linear-gradient(top, #d0d0d0 0, #fcfcfc 100%);
  background-image: linear-gradient(to bottom, #d0d0d0 0, #fcfcfc 100%);
  -webkit-box-shadow -2px 0px 2px rgba(0,0,0,.2), rgba(255,255,255,.75) 0px 0px 4px inset
  -webkit-transform: translate3d(48px,0,0);
          transform: translate3d(48px,0,0);
}

/* Change "off" to "on" for active state */
.toggle.active:before {
  right: auto;
  left: 15px;
  color: #fff;
  text-shadow: 0 -1px 2px rgba(0, 0, 0, 0.35);
  content: "On";
  font-weight: bold;
  font-size: 16px;
}